# Backend Environment Variables for Docker
# Copy this to .env and fill in the values

# Database Connection
# Format: "Host=your-host;Database=your-db;Username=your-user;Password=your-password"
ConnectionStrings__DefaultConnection="Host=db.your-project.supabase.co;Port=5432;Database=postgres;Username=postgres;Password=YOUR_PASSWORD"

# ASP.NET Environment
ASPNETCORE_ENVIRONMENT=Development

# ASP.NET URLs (Docker container listens on port 8080)
ASPNETCORE_URLS=http://+:8080

# JWT Configuration (MUST be changed for production!)
# Generate a secure random string of at least 32 characters
# Example: openssl rand -base64 32
Jwt__Key=YourSecureRandomStringOfAtLeast32CharactersHere
Jwt__Issuer=KollectorScum
Jwt__Audience=KollectorScumUsers

# Google OAuth (get from Google Cloud Console)
Google__ClientId=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com

# CORS - Frontend URL
Frontend__Origin=http://localhost:3000

# Optional: Discogs Integration
# Discogs__Token=YOUR_DISCOGS_TOKEN

# Optional: LLM Integration
# LLM__ApiKey=YOUR_LLM_API_KEY

# Cloudflare R2 (S3-compatible) - staging
# Replace placeholders with your Cloudflare R2 values for staging
R2__AccountId=your-cloudflare-account-id
R2__Endpoint=https://<account_id>.r2.cloudflarestorage.com
R2__AccessKeyId=YOUR_R2_ACCESS_KEY_ID
R2__SecretAccessKey=YOUR_R2_SECRET_ACCESS_KEY
R2__BucketName=cover-art-staging
R2__PublicBaseUrl=
